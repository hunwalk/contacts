{% extends layout %}

{% block title %}Contact index{% endblock %}

{% block body %}
    {% if domajax is not defined %}
    <div class="dom-load" data-refresh="{{ path('app_contact_index') }}">
    {% endif %}
        <h1>Contact index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>First_name</th>
                    <th>Last_name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.id }}</td>
                    <td>{{ contact.firstName }}</td>
                    <td>{{ contact.lastName }}</td>
                    <td>{{ contact.phone }}</td>
                    <td>{{ contact.email }}</td>
                    <td>
                        <a class="btn btn-slim btn-success" href="{{ path('app_contact_show', {'id': contact.id}) }}">show</a>
                        <a class="btn btn-slim btn-warning open-form" href="{{ path('app_contact_edit', {'id': contact.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary open-form" href="{{ path('app_contact_new') }}">Create new</a>
    {% if domajax is not defined %}
    </div>
    {% endif %}
{% endblock %}
